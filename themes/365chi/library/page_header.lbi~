<script type="text/javascript">
{literal}
$(function() {
    $("#CartLi").mouseenter(function(){       

            $("#CartDiv").addClass("hover");
            $("#CartDiv").show();
                updateCart();
    });
    $("#CartLi").mouseleave(function(){       
        $("#CartDiv").removeClass("hover");
        $("#CartDiv").hide();
            $("#CartLi").mouseenter(function() {
                $("#CartDiv").addClass("hover");
                $("#CartDiv").show();
                updateCart();
            }); 

    });



    $("#btn_search").click(function() {
        SearchProduct();
    }); 

});
{/literal}
</script>
  
